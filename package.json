{
  "name": "league-toybox",
  "version": "1.0.0",
  "main": "index.js",
  "private": true,
  "useWorkspaces": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "repository": "https://github.com/LukeWood/miniature-parakeet.git",
  "author": "Luke Wood <lukewoodcs@gmail.com>",
  "license": "MIT",
  "scripts": {
    "start": "yarn build:common && concurrently --kill-others-on-fail \"yarn start:client\" \"yarn start:server\" \"yarn start:common\"",
    "start:server": "yarn workspace @league-toybox/server start",
    "start:client": "yarn workspace @league-toybox/client start",
    "start:common": "yarn workspace @league-toybox/common start",
    "build:client": "yarn workspace @league-toybox/client build",
    "build:common": "yarn workspace @league-toybox/common build",
    "build": "yarn build:client && yarn build:common"
  },
  "devDependencies": {
    "concurrently": "^5.3.0"
  }
}
