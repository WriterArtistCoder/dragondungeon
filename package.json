{
  "name": "dragondungeon",
  "version": "1.0.0",
  "main": "index.js",
  "private": true,
  "useWorkspaces": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "repository": "https://github.com/jointheleague/dragondungeon.git",
  "author": "Luke Wood <lukewoodcs@gmail.com>, Keith Groves <keith.groves@jointheleague.org>, Samuel Sharp <samuel@samuelsharp.com>, Chris Woolson",
  "license": "MIT",
  "scripts": {
    "start": "yarn build:common && concurrently --kill-others-on-fail \"yarn start:client\" \"yarn start:server\" \"yarn start:common\"",
    "start:server": "yarn workspace @dragondungeon/server start",
    "start:client": "yarn workspace @dragondungeon/client start",
    "start:common": "yarn workspace @dragondungeon/common start",
    "build:client": "yarn workspace @dragondungeon/client build",
    "build:common": "yarn workspace @dragondungeon/common build",
    "build": "yarn build:client && yarn build:common"
  },
  "devDependencies": {
    "concurrently": "^5.3.0",
    "http-server": "^0.12.3"
  },
  "dependencies": {
    "@types/testing-library__dom": "^7.5.0"
  }
}
